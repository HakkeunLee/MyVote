<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/landscapepagebackgrounddark">
    <LinearLayout
        android:id="@+id/searchLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:minWidth="25px"
        android:minHeight="25px"
        android:focusableInTouchMode="true">
        <Spinner
            android:id="@+id/pollTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
        <EditText
            android:id="@+id/pollsPageSearchField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />
        <Button
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Search" />
        <Button
            android:id="@+id/addPollButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Add a Poll" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/searchLayout">
        <LinearLayout
            android:id="@+id/pollview_catagoryLinearLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchLayout" />
    </ScrollView>
    <FrameLayout
        android:id="@+id/polls_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000" />
</RelativeLayout>