<resources>

  <!-- Button Styles -->
  <style name="login_button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_weight">.24</item>s
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:padding">0dp</item>
    <item name="android:background">@color/social_login_button</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:scaleType">fitCenter</item>
  </style>

  <!-- Editable Text Input Styling -->
  <style name="registration_edittext" >
    <item name="android:layout_width" >fill_parent</item>
    <item name="android:layout_height" >wrap_content</item>
    <item name="android:minHeight">60dp</item>
    <item name="android:singleLine" >true</item>
    <item name="android:lines" >1</item>
    <item name="android:textColor" >#ffffff</item>
    <item name="android:layout_margin" >20dp</item>
  </style>
  
  <style name="addpoll_edittext" >
    <item name="android:layout_width" >fill_parent</item>
    <item name="android:layout_height" >wrap_content</item>
    <item name="android:singleLine" >true</item>
    <item name="android:lines" >1</item>
  </style>
  
  <!-- Text Styling -->
  <style name="registration_text" >
    <item name="android:textSize" >60sp</item>
    <item name="android:textStyle" >bold</item>
    <item name="android:shadowColor" >#000000</item>
    <item name="android:shadowDx" >1</item>
    <item name="android:shadowDy" >1</item>
    <item name="android:shadowRadius" >2</item>
  </style>
  
  <style name="addpoll_text" >
  	<item name="android:layout_width" >fill_parent</item>
    <item name="android:layout_height" >wrap_content</item>
  	<item name="android:textColor" >#FFFFFF</item>
  	<item name="android:textStyle" >bold</item>
  </style>
  
</resources>